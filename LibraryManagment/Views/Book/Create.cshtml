@model LibraryManagment.ViewModel.BookViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Book" asp-action="CreateNew" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="@Model.Book.Name"></label>
        <input type="text" class="form-control" id="txtBookName" asp-for="@Model.Book.Name" value="">
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.Version"></label>
        <input type="text" class="form-control" id="txtBookName" asp-for="@Model.Book.Version" value="">
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.Author"></label>
        @Html.DropDownListFor(m => m.Book.AuthorId, new SelectList(Model.Authors.Select(a => new { Value = a.ID, Text = a.Name }), "Value", "Text"),
            htmlAttributes: new { @class = "form-control border-input" })
    </div>

    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-6">
            <input class="btn btn-success" type="submit" name="" value="Create" /> &nbsp;
            <input class="btn btn-default" type="submit" name="" value="Return" asp-action="Index" asp-controller="Author" />
        </div>
    </div>
</form>


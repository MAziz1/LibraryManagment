@model LibraryManagment.ViewModel.BookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Book" asp-action="Update" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="Book.ID"></label>
        <input type="text" class="form-control" id="txtBookID" asp-for="Book.ID" value="@Model.Book.ID">
    </div>
    <div class="form-group">
        <label asp-for="Book.Name"></label>
        <input type="text" class="form-control" id="txtBookName" asp-for="Book.Name" value="@Model.Book.Name">
    </div>

    <div class="form-group">
        <label asp-for="Book.Version"></label>
        <input type="text" class="form-control" id="txtBookName" asp-for="Book.Version" value="@Model.Book.Version">
    </div>

    <div class="form-group">
        <label asp-for="Book.Author.Name"></label>
        
            @Html.DropDownListFor(m => m.Book.AuthorId,
         new SelectList(Model.Authors.Select(x => new { Value = x.ID, Text = x.Name }), "Value", "Text"),
         htmlAttributes: new { @class = "form-control border-input" })        

    </div>

    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-6">
            <input class="btn btn-success" type="submit" name="" value="Update" /> &nbsp;
            <input class="btn btn-default" type="submit" name="" value="Return" asp-action="BookList" asp-controller="Book" />
        </div>
    </div>
</form>


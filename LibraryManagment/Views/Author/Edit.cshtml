@model LibraryManagment.Data.Model.Author
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Author" asp-action="Update" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input type="text" class="form-control" id="txtAuthorID" asp-for="ID" value="@Model.ID">
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" id="txtName" asp-for="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-6">
            <input class="btn btn-success" type="submit" name="" value="Update" /> &nbsp;
            <input class="btn btn-default" type="submit" name="" value="Return" asp-action="Index" asp-controller="Author" />
        </div>
    </div>
</form>

@Html.Partial("~/Views/Shared/BookList.cshtml", Model.Books)
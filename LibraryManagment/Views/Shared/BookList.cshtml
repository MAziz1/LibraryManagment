@model IEnumerable<LibraryManagment.Data.Model.Book>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count() > 0)
{
    <h3>Books avilable for  @Model.FirstOrDefault().Author.Name </h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Version</th>
                <th>Edit Book</th>
                <th>Delete Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <th>
                        <label>@book.ID</label>
                    </th>
                    <th>
                        <label>@book.Name</label>
                    </th>
                    <th>
                        <label>@book.Version</label>
                    </th>
                    <th>
                        <a asp-action="Edit" asp-controller="Book" asp-route-id="@book.ID" class="btn btn-info">Edit</a>
                    </th>
                    <th>
                        <a asp-action="Delete" asp-controller="Book" asp-route-id="@book.ID" class="btn btn-danger">Delete</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>There is no books avilable for this author</h3>
}
